<div class="form-group core-component-formentry-inputdateinterval">
    <label for="{{ name }}_unit" class="col-sm-3 control-label">{{ title }}</label>
    <div class="col-sm-6">
        <div class="row">
            <div class="col-md-8">
                <input
                        type="number"
                        name="{{ name }}"
                        id="{{ name }}"
                        value="{{ value }}"
                        class="form-control {{ addons|raw }}"
                        {% if readOnly %}disabled="disabled"{% endif %}
                        min="{{ minValue }}">
            </div>
            <div class="col-md-4">
                <select
                        name="{{ name }}_unit" id="{{ name }}_unit"
                        class="form-control {{ addons|raw }}"
                        {% if readOnly %}disabled="disabled"{% endif %}>
                    {% for key, optionValue in options %}
                        {% if key == selected %}
                            <option value="{{ key }}" selected="selected">{{ optionValue }}</option>
                        {% else %}
                            <option value="{{ key }}">{{ optionValue }}</option>
                        {% endif %}
                    {% endfor %}
                </select>
            </div>
        </div>
    </div>
</div>
