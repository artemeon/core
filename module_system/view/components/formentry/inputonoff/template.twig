
<div class="form-group core-component-formentry-inputonoff">
    <label for="{{ name }}" class="col-sm-3 control-label">{{ title }}</label>
    <div class="col-sm-6">
        <div id="div_{{ name }}">
            <input type="checkbox" name="{{ name }}" value="checked" id="{{ name }}" {% if class %}class="{{ class }}"{% endif %} {% if checked %}checked{% endif %} {% if readOnly %}disabled{% endif %} {% for key, value in data %}data-{{ key }}="{{ value|e('html_attr') }}"{% endfor %}>
        </div>
    </div>
    <script type="text/javascript">
        require(["jquery", "bootstrap-switch"], function($){
            var divId = '{{ name }}';
            divId = '#' + divId.replace( /(:|\.|\[|\])/g, "\\$1" );
            $(divId).bootstrapSwitch();
            $(divId).on('switchChange.bootstrapSwitch', function (event, state) {
                {{ callback|raw }}
            });
        });
    </script>
</div>
