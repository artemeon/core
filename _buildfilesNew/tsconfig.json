{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "strict": false,
    "noImplicitReturns": false,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es2015", "dom"],
    // "outDir": "./temp",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },

  "include": ["../../core/module_*/scripts/", "../../core_*/module_*/scripts/"],
  "exclude": ["node_modules", "../_buildfiles", "./"],
  "compileOnSave": true
}
